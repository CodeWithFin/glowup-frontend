# Backend Auth API base URL (no trailing slash)
AUTH_API_URL=http://localhost:4000

# App URL used for redirects and cookies
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Redis (Upstash) - optional for local dev, required in prod
REDIS_URL=
REDIS_TOKEN=

# Stripe - required for payments/webhooks
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Admin user IDs (comma-separated) for admin-only endpoints
ADMIN_USER_IDS=

# Loyalty Points Configuration
LOYALTY_POINTS_PER_KES=0.01           # Points earned per KES spent (default: 1 point per 100 KES)
LOYALTY_REVIEW_BONUS=50               # Points for writing a product review
LOYALTY_REFERRAL_BONUS_REFERRER=500   # Points for referrer when referral completes first purchase
LOYALTY_REFERRAL_BONUS_REFEREE=250    # Points for new customer using referral code
LOYALTY_MIN_REDEEM=100                # Minimum points required to redeem
LOYALTY_POINT_VALUE_KES=1             # KES discount value per point (1 point = 1 KES)
LOYALTY_EXPIRY_DAYS=365               # Days until earned points expire (optional)

# Media Upload Configuration (optional - for Cloudinary/S3 integration)
CLOUDINARY_UPLOAD_URL=                # Cloudinary upload endpoint
CLOUDINARY_API_SECRET=                # For generating signed uploads
CLOUDINARY_CLOUD_NAME=                # Your Cloudinary cloud name
